<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="10dp"
    android:background="@drawable/bg_10r_rounded"
    android:backgroundTint="@color/white"
    android:paddingHorizontal="10dp"
    android:paddingVertical="10dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivQuestion"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:backgroundTint="@color/app_two"
        android:src="@drawable/ic_correct"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvQuestion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/montserrat_semibold"
        android:includeFontPadding="false"
        android:text="@string/lorem_ipsum"
        android:textColor="@color/black"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivQuestion"
        app:layout_constraintTop_toTopOf="parent"
        tools:lines="4" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvUserAnswerValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_10r_rounded"
        android:fontFamily="@font/montserrat_medium"
        android:includeFontPadding="false"
        android:text="User Answer"
        android:textColor="@color/wrong_answer"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivQuestion"
        app:layout_constraintTop_toBottomOf="@id/tvQuestion" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvCorrectAnswerValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_10r_rounded"
        android:fontFamily="@font/montserrat_semibold"
        android:includeFontPadding="false"
        android:text="User Answer"
        android:textColor="@color/right_answer"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivQuestion"
        app:layout_constraintTop_toBottomOf="@id/tvUserAnswerValue" />


</androidx.constraintlayout.widget.ConstraintLayout>