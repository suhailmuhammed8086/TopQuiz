<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.game.result.ResultActivity">
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="@drawable/bg_10r_rounded"
        android:clipToOutline="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:targetApi="s">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:paddingVertical="20dp"
            android:background="@color/app_one"
            android:layout_height="wrap_content">

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:backgroundTint="@color/app_one_light"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/startGuide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.075" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/endGuide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.925" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/topGuide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="0dp" />

            <View
                android:id="@+id/bgTopSection"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="-50dp"
                android:background="@color/app_one"
                android:clipToOutline="true"
                android:foreground="@color/foreground_wrapper_dark"
                app:layout_constraintBottom_toBottomOf="@id/tvPercentage"
                app:layout_constraintEnd_toEndOf="@id/endGuide"
                app:layout_constraintStart_toStartOf="@id/startGuide"
                app:layout_constraintTop_toTopOf="@id/topGuide"
                app:layout_constraintWidth_percent="0.8"
                tools:targetApi="s" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/montserrat_semibold"
                android:includeFontPadding="false"
                android:text="Your Result"
                android:textColor="@color/white"
                android:textSize="25sp"
                app:layout_constraintEnd_toEndOf="@id/bgTopSection"
                app:layout_constraintStart_toStartOf="@id/bgTopSection"
                app:layout_constraintTop_toTopOf="@id/bgTopSection" />

            <View
                android:id="@+id/bgCircle"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_full_rounded"
                android:backgroundTint="@color/app_four"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="@id/bgTopSection"
                app:layout_constraintStart_toStartOf="@id/bgTopSection"
                app:layout_constraintTop_toBottomOf="@id/tvResult"
                app:layout_constraintWidth_percent="0.4" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvPercentage"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:fontFamily="@font/montserrat_extra_bold"
                android:gravity="center"
                android:includeFontPadding="false"
                android:padding="15dp"
                android:textColor="@color/white"
                app:autoSizeMaxTextSize="50sp"
                app:autoSizeMinTextSize="10sp"
                app:autoSizeTextType="uniform"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toBottomOf="@id/bgCircle"
                app:layout_constraintEnd_toEndOf="@id/bgCircle"
                app:layout_constraintStart_toStartOf="@id/bgCircle"
                app:layout_constraintTop_toTopOf="@id/bgCircle"
                tools:text="76%" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvGrade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/montserrat_extra_bold"
                android:gravity="center"
                android:includeFontPadding="false"
                android:padding="15dp"
                android:rotation="-20"
                android:textColor="@color/white"
                android:textSize="70sp"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toBottomOf="@id/bgTopSection"
                app:layout_constraintEnd_toEndOf="@id/bgTopSection"
                app:layout_constraintTop_toTopOf="@id/tvPercentage"
                app:layout_constraintVertical_bias="1"
                tools:text="A+" />

            <View
                android:id="@+id/bottomSection"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="-20dp"
                android:layout_marginBottom="-20dp"
                android:background="@drawable/bg_10r_rounded"
                android:backgroundTint="@color/app_one"
                android:elevation="-1dp"
                app:layout_constraintBottom_toBottomOf="@id/rvInfo"
                app:layout_constraintEnd_toEndOf="@id/bgTopSection"
                app:layout_constraintStart_toStartOf="@id/bgTopSection"
                app:layout_constraintTop_toBottomOf="@id/bgTopSection" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:nestedScrollingEnabled="false"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="@id/bottomSection"
                app:layout_constraintStart_toStartOf="@id/bottomSection"
                app:layout_constraintTop_toTopOf="@id/bottomSection"
                tools:itemCount="3"
                tools:listitem="@layout/adapter_result_info" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvCheckAnswers"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_10r_rounded"
                android:backgroundTint="@color/app_four"
                android:fontFamily="@font/montserrat_semibold"
                android:gravity="center"
                android:minHeight="52dp"
                android:text="Check Answers"
                tools:visibility="visible"
                android:visibility="gone"
                android:textColor="@color/white"
                android:textSize="22sp"
                app:layout_constraintEnd_toEndOf="@id/bottomSection"
                app:layout_constraintStart_toStartOf="@id/bottomSection"
                app:layout_constraintTop_toBottomOf="@id/bottomSection"
                app:layout_goneMarginTop="10dp" />


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btnShare"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="20dp"
                android:background="@drawable/bg_rounded_10r"
                android:backgroundTint="@color/app_four"
                android:padding="10dp"
                tools:visibility="visible"
                android:visibility="gone"
                android:src="@drawable/ic_share"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toStartOf="@id/btnHome"
                app:layout_constraintStart_toStartOf="@id/startGuide"
                app:layout_constraintTop_toBottomOf="@id/tvCheckAnswers"
                app:layout_constraintWidth_percent="0.15" />


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btnHome"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="20dp"
                android:background="@drawable/bg_rounded_10r"
                android:backgroundTint="@color/app_four"
                android:padding="10dp"
                tools:visibility="visible"
                android:visibility="gone"
                android:src="@drawable/ic_home"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="@id/endGuide"
                app:layout_constraintStart_toEndOf="@id/btnShare"
                app:layout_constraintTop_toBottomOf="@id/tvCheckAnswers"
                app:layout_constraintWidth_percent="0.15" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>